<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".mypath"
    android:background="@drawable/walls_backround_pic">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Path"
        android:id="@+id/textView"
        android:textColor="#ff5248"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="27sp"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME "

        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button"
        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:onClick="goback" />
    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Path 1"
        android:onClick="goPath1"
        android:id="@+id/button4"
        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Path 2"
        android:id="@+id/button2"
        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Path 3"
        android:id="@+id/button5"
        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Path 4"
        android:id="@+id/button6"
        android:background="@drawable/button_choice"
        android:textStyle="bold"

        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Path 5"
        android:id="@+id/button7"
        android:background="@drawable/button_choice"
        android:textStyle="bold"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="28dp" />


</RelativeLayout>

